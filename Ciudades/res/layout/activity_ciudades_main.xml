<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ciudades.CiudadMainActivity" >
    

    <EditText
        android:id="@+id/ETCiudades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TVCiudades"
        android:layout_alignBottom="@+id/TVCiudades"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <TextView
        android:id="@+id/TVCiudades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="68dp"/>

    <ListView
        android:id="@+id/LVCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BTAdicionar"
        android:layout_marginTop="34dp" >
        
    </ListView>

    <Button
        android:id="@+id/BTAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TVCiudades"
        android:layout_below="@+id/ETCiudades"
        android:layout_marginTop="25dp"
        android:text="ADICIONAR" />

    <Button
        android:id="@+id/BTEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LVCiudad"
        android:layout_alignRight="@+id/ETCiudades"
        android:layout_marginRight="38dp"
        android:text="ELIMINAR"/>

</RelativeLayout>
